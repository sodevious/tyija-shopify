<h3 class="page-title">
    {{ collection.title }}
  </h3>
  
  <div class="p-4 md:p-8">
    {% paginate collection.products by 16 %}
      {% if collection and collection.products %}
        <div class="grid grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-x-8 gap-y-16">
          {% for product in collection.products %}
            {% render 'product-card', product: product, class: "product-card", enable_likes: true, show_title: true %}
          {% endfor %}
        </div>
  
        {% render 'pagination', paginate: paginate %}
      {% else %}
        <div>
          {{ 'common.no_products' | t }}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
  