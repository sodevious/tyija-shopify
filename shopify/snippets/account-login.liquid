<div class="p-4 md:p-8 max-w-lg">
  <h3 class="text-h3 uppercase mb-16">
    {{ 'customer.log_in' | t }}
  </h3>

  {% form 'customer_login' %}
    {% if form.errors %}
      {{ form.errors | default_errors }}
     {% endif %}
     
    <div class="mb-4 sm:mb-6">
      <label
        for="CustomerEmail"
        class="text-h5 uppercase"
      >
        {{ 'customer.login_page.email' | t }}
      </label>
  
      <input
        type="email"
        id="CustomerEmail"
        name="customer[email]"
        class="w-full"
        required
      >
    </div>
  
    {% if form.password_needed %}
      <div class="mb-4 sm:mb-10">
        <label
          for="CustomerPassword"
          class="text-h5 uppercase"
        >
          {{ 'customer.login_page.password' | t }}
        </label>
  
        <input
          type="password"
          id="CustomerPassword"
          name="customer[password]"
          class="w-full"
          required
        >
      </div>
    {% endif %}
  
    
    <button type="submit" class="button mr-2">
      {{ 'customer.login_page.sign_in' | t }}
    </button>
  
    <span>{{ 'common.or' | t }}&nbsp;</span>

    <a
      href="{{ routes.root_url }}account/register"
      class="underline text-h5 uppercase ml-2"
    >
      {{ 'customer.login_page.create_account' | t }}
    </a>
        
    {% if form.password_needed %}
      <button class="block mt-16 no-js:hidden" @click.prevent="show('forgot-password')">
        {{ 'customer.login_page.forgot_password' | t }}
      </button>
    {% endif %}
  {% endform %}
</div>