<div class="p-4 md:p-8 max-w-lg">
  <h3 class="text-h3 uppercase mb-16">
    {{ 'customer.recover_password.title' | t }}
  </h3>

  <p class="mb-8">
    {{ 'customer.recover_password.subtext' | t }}
  </p>

  {% form 'recover_customer_password' %}
    {% if form.errors %}
      {{ form.errors | default_errors }}
      {% endif %}

    {% if form.posted_successfully? %}
      {% assign translation_response = 'customer.entry.reset_password_response' | t %}
      {% render 'layout-message',
        type: 'success'
        text: translation_response
        class: 'mb-8'
      %}
    {% endif %}

    <div class="mb-4 sm:mb-10">
      <label
        for="RecoverEmail"
        class="text-h5 uppercase"
      >
        {{ 'form.email' | t }}
      </label>

      <input
        type="email"
        id="RecoverEmail"
        name="email"
        class="w-full"
        required
      >
    </div>

    <div class="flex flex-wrap gap-4 sm:gap-6">
      <button
        type="submit"
        class="button button-primary"
      >
        {{ 'action.restore' | t }}
      </button>

      <div class="w-full sm:w-auto flex justify-center items-center">
        <button class="underline" @click.prevent="show('login')">
          {{ 'action.cancel' | t }}
        </button>
      </div>
    </div>
  {% endform %}
</div>