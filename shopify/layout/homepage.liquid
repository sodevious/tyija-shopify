<!doctype html>
<html lang="{{ request.locale.iso_code }}" class="light no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preload" href="{{ 'bundle.css' | asset_url }}" as="style">
    <link rel="preload" href="{{ 'bundle.js' | asset_url }}" as="script">

    {% if settings.favicon %}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {% endif %}

    <title>{{ page_title | escape }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ 'bundle.css' | asset_url | stylesheet_tag }}

    <!-- Shopify scripts -->
    {{ content_for_header }}
  </head>

  <body class="bg-white text-black {{ request.page_type }}">
    {{ content_for_layout }}

    <div vue class="no-js:hidden">
      <div class="tyija-actions">
        {% render 'actions' %}
      </div> 

      <menu-wrapper v-slot="{ navContext }">
        {% render 'menu' %}
      </menu-wrapper>
      
      {% render 'footer' %}

       <shopping-cart></shopping-cart>
    </div>

    {% render 'icon-sprite' %}

    <script src="{{ 'bundle.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
