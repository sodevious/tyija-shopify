<h3 class="page-title">Designers</h3>

<div class="py-4 md:py-8" vue>
  {% if collections %}
    {% paginate collections by 16 %}
      {% for collection in collections %}
        {% if collection.metafields.tyija.is_designer == true %}
          <designer-collection collection-link='{{ collection.url }}' collection-size='{{ collection.products|size }}'>
            <h3 class="text-h3 md:text-xl uppercase">
              {{ collection.title | escape }}
            </h3>
          
            <template #initial="slotProps">
              <div class="designer-collection" :class="[ slotProps.isZoomed ? 'is-zoomed ' : 'pointer-events-none']">
                {% for product in collection.products %}
                    {% render 'product-card', product: product, class: "designer-collection-product product-card-mini"  %}
                {% endfor %}
              </div>
            </template>
          </designer-collection>
        {% endif %}
      {% endfor %}

      {% render 'pagination', paginate: paginate %}
    {% endpaginate %}
  {% endif %}
</div>
